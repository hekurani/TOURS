extends base

block content
  main.main
    .login-form
      h2.heading-secondary.ma-bt-lg Create New Account
      form.form.form--SignUp
        .form__group
          label.form__label(for='name') Name
          input#nameS.form__input(type='text', placeholder='Filan Fisteku', required minlength='3')
        .form__group
          label.form__label(for='email') Email address
          input#emailS.form__input(type='email', placeholder='you@example.com', required)
        .form__group.ma-bt-md
          label.form__label(for='password') Password
          input#passwordS.form__input(type='password', placeholder='••••••••', required, minlength='8')
        .form__group.ma-bt-md
          label.form__label(for='password') Password Confirm
          input#passwordSC.form__input(type='password', placeholder='••••••••', required, minlength='8')
        .form__group.form__photo-upload
          input.form__upload(type='file', accept='image/*', id='photoS', name='photo')
          label(for='photoS') Choose User photo
        .form__group
          button.btn.btn--green Sign Up